-- Create the Database
CREATE DATABASE petconnect_db;
USE petconnect_db;

-- 1. Create the Pets Table
CREATE TABLE pets (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    type ENUM('Dog', 'Cat', 'Rabbit', 'Other') NOT NULL,
    breed VARCHAR(100),
    age INT,
    status ENUM('Available', 'Pending', 'Adopted') NOT NULL DEFAULT 'Available',
    image_url VARCHAR(255),
    description TEXT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- 2. Create the Donations Table
CREATE TABLE donations (
    id INT AUTO_INCREMENT PRIMARY KEY,
    amount DECIMAL(10, 2) NOT NULL,
    donor_name VARCHAR(100),
    donor_email VARCHAR(100),
    donation_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- Insert some initial data
INSERT INTO pets (name, type, breed, age, image_url) VALUES
